{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/tobiashein/rarrange.schema/develop/rarrange.schema.json",
  "type": "object",
  "properties": {
    "catchAllRegion": {
      "type": "boolean"
    },
    "endOfLineType": {
      "$ref": "#/$defs/endOfLineType"
    },
    "headerRegion": {
      "type": "boolean"
    },
    "tabs": {
      "type": "boolean"
    },
    "groups": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/group"
      }
    }
  },
  "required": [
    "groups"
  ],
  "$defs": {
    "group": {
      "type": "object",
      "properties": {
        "regionName": {
          "type": "string"
        },
        "groups": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/group"
          },
          "minItems": 1
        },
        "sorters": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/sorter"
          },
          "minItems": 1
        }
      },
      "anyOf": [
        {
          "required": [
            "groups"
          ]
        },
        {
          "required": [
            "sorters"
          ]
        }
      ]
    },
    "sorter": {
      "type": "object",
      "properties": {
        "type": {
          "$ref": "#/$defs/sorterType"
        },
        "accessModifiers": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/accessModifier"
          }
        },
        "modifiers": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/modifier"
          }
        },
        "sortOrder": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/sortOrder"
          }
        }
      },
      "required": [
        "type"
      ]
    },
    "sorterType": {
      "type": "string",
      "enum": [
        "class",
        "constructor",
        "conversionOperator",
        "delegate",
        "destructor",
        "enum",
        "event",
        "eventField",
        "field",
        "indexer",
        "interface",
        "method",
        "nestedType",
        "operator",
        "property",
        "struct",
        "type"
      ]
    },
    "accessModifier": {
      "type": "string",
      "enum": [
        "public",
        "internal",
        "protected",
        "private",
        "protectedInternal",
        "privateProtected",
        "explicitInterfaceImplementation"
      ]
    },
    "modifier": {
      "type": "string",
      "enum": [
        "abstract",
        "async",
        "const",
        "event",
        "extern",
        "new",
        "override",
        "partial",
        "readonly",
        "sealed",
        "static",
        "unsafe",
        "virtual",
        "volatile"
      ]
    },
    "sortOrder": {
      "type": "string",
      "enum": [
        "nameAscending",
        "nameDescending",
        "parameterCountAscending",
        "parameterCountDescending",
        "accessModifierAscending",
        "accessModifierDescending"
      ]
    },
    "endOfLineType": {
      "type": "string",
      "enum": [
        "default",
        "crlf",
        "cr",
        "lf"
      ]
    }
  }
}